<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_14"
        tools:text="小羊" />
    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/icon_collect"
        android:layout_marginTop="@dimen/dp_10"
        />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="@dimen/dp_5"
        tools:src="@drawable/icon_tab_find" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_img"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        tools:text="一个零耦合的侧滑菜单一个零耦合的侧滑菜单"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_img"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="一个零耦合的侧滑菜单，一个零耦合的侧滑菜单，一个零耦合的侧滑菜单，一个零耦合的侧滑菜单，支持RecyclerView,ListView,GrideView一个零耦合的侧滑菜单，一个零耦合的侧滑菜单，"
        />
    <TextView
        android:id="@+id/tv_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        android:layout_marginStart="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_gray"
        tools:text="开源项目主tab"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/tv_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        android:layout_marginEnd="@dimen/dp_10"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_13"
        tools:text="2020-04-06" />
</androidx.constraintlayout.widget.ConstraintLayout>